{
  "dashboard": {
    "id": null,
    "title": "Student Grades Overview",
    "panels": [
      {
        "type": "graph",
        "title": "API Request Count",
        "targets": [
          { "expr": "rate(flask_requests_total[1m])" }
        ],
        "xaxis": {"show": true},
        "yaxis": {"show": true}
      },
      {
        "type": "graph",
        "title": "Student vs Class & Overall Average",
        "targets": [
          {
            "expr": "avg_over_time(app_overall_avg[5m])"
          },
          {
            "expr": "avg_over_time(app_class_avg{course=\"Math\"}[5m])"
          }
        ],
        "xaxis": {"show": true},
        "yaxis": {"show": true}
      }
    ]
  },
  "overwrite": true
}
